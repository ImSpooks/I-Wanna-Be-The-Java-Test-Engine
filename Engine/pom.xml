<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>iwbtj</artifactId>
        <groupId>me.ImSpooks</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>engine</artifactId>

    <dependencies>

        <dependency>
            <groupId>com.badlogingames.gdx</groupId>
            <artifactId>gdx</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/gdx.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>gdx-platform</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/gdx-natives.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>gdx-tools</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/gdx-tools.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>gdx-backend-lwjgl</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/gdx-backend-lwjgl.jar</systemPath>
        </dependency>


        <dependency>
            <groupId>com.badlogingames.gdx</groupId>
            <artifactId>gdx-backend-lwjgl-platform</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/gdx-backend-lwjgl-natives.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>gdx-freetype</artifactId>
            <version>1.9.8</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/gdx-freetype.jar</systemPath>
        </dependency>


        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>gdx-freetype-platform</artifactId>
            <version>1.9.8</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/gdx-freetype-natives.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>gdx-sources</artifactId>
            <version>1.9.8</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/gdx-sources.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>tween-engine</artifactId>
            <version>1.9.8</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/tween-engine-api.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>tween-engine-sources</artifactId>
            <version>1.9.8</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/tween-engine-api-sources.jar</systemPath>
        </dependency>



        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.2</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/main/lib/lombok.jar</systemPath>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <finalName>${project.artifactId}-${project.version}</finalName>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources/</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>